{
  "compilerOptions": {
    "baseUrl": "./src", // This must be specified if "paths" is.
    "paths": {
      "@modules/*": [
        "core/modules/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@plugins/*": [
        "plugins/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "incremental": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "node"
    ]
  },
  "types": [
    "node"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "config.json",
    "./src/old/*",
    "./keys.json"
  ]
}